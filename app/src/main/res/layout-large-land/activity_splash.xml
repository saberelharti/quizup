<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_intro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="net.dm73.quizitup.SplashActivity">

    <net.dm73.quizitup.AspectRatioImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/intro_quiz_land"
        android:scaleType="fitStart"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"/>


    <ImageView
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:id="@+id/quizupName"
        android:src="@drawable/quizup_name"
        android:scaleType="centerInside"
        android:layout_marginRight="25dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"/>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:id="@+id/logoIntro"
        android:src="@drawable/log"
        android:scaleType="centerInside"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/quizupName"
        android:adjustViewBounds="true"
        android:layout_toLeftOf="@+id/quizupName" />

    <ImageView
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:id="@+id/quizupSubName"
        android:src="@drawable/quizup_subname"
        android:scaleType="centerInside"
        android:layout_marginTop="20dp"
        android:layout_below = "@+id/logoIntro"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:adjustViewBounds="true"/>

    <com.github.ybq.android.spinkit.SpinKitView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/spinView"
        android:layout_below="@+id/quizupSubName"
        android:layout_alignParentRight="true"
        android:layout_marginTop="35dp"
        android:layout_marginRight="150dp"
        android:visibility="visible"
        app:SpinKit_Color="#b4a7c4"
        app:SpinKit_Style="ThreeBounce"
        style="@style/SpinKitView.Large.Circle"/>


</RelativeLayout>

